<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="attendance" >
    <typeAlias alias="attendance" type="net.caiban.auth.dashboard.domain.hr.Attendance" />
    <resultMap id="fullcolumnResult" class="attendance" >
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="code" column="code" />
        <result property="account" column="account" />
        <result property="gmtWork" column="gmt_work" />
        <result property="gmtCreated" column="gmt_created" />
        <result property="gmtModeified" column="gmt_modified" />
        <result property="scheduleId" column="schedule_id" />
    </resultMap>
	<sql id="fullcolumn" >
		id,
		name,
		code,
		account,
		gmt_work,
		gmt_created,
		gmt_modified,
		schedule_id
    </sql>
